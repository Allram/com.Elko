{
  "id": "com.elko",
  "version": "0.0.6",
  "compatibility": ">=1.5.3",
  "sdk": 2,
  "brandColor": "#be0000",
  "name": {
    "en": "ELKO Smart Home"
  },
  "description": {
    "en": "This app adds support for your ELKO Smart Home devices",
    "no": "Denne appen gir support for Elko Smart Home enheter"
  },
  "category": [ "lights", "climate" ],
  "images": {
    "large": "/assets/images/Large.jpg",
    "small": "/assets/images/small.jpg"
  },
  "author": {
    "name": "Pål Raymond Johansen",
    "email": "prj_84@hotmail.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Pål Raymond Johansen",
        "email": "prj_84@hotmail.com"
      },
      {
        "name": "Nils-Martn Skaanes",
        "email": "nilskaa@gmail.com"
      },
      {
        "name": "Espen Herseth Halvorsen",
        "email": ""
      },
      {
        "name": "Espen Ljosland",
        "email": "espen@ljosland.com"
      },
      {
        "name": "Bjørnar Almli",
        "email": "bjornar.almli@gmail.com"
      }
    ]
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "prj84"
      }
    }
  },
  "drivers": [
    {
      "id": "ESH316GLED",
      "name": {
        "en": "ESH 316GLED Dimmer RF PF",
        "no": "ESH 316GLED Dimmer RF PF"
      },
      "class": "light",
      "capabilities": [
        "onoff",
        "dim"
      ],
      "capabilitiesOptions": {
        "dim": {
          "setOnDim": "false"
        }
      },
      "zigbee": {
        "manufacturerName": "ELKO",
        "productId": "ElkoDimmerZHA",
        "deviceId": 257,
        "profileId": 260,
        "learnmode": {
          "image": "/drivers/ESH316GLED/assets/include.svg",
          "instruction": {
            "en": "Click on and hold dimmer wheel 1. and pushbutton 2. Until green LED 3. flashes. Wait for Homey to list device",
            "no": "Klikk og hold dimmerhjulet (1.) og knapp (2.) inntil det grønne lyset (3.), blinker. Vent på at Homey legger til enheten"
          }
        }
      },
      "images": {
        "large": "/drivers/ESH316GLED/assets/images/Large.jpg",
        "small": "/drivers/ESH316GLED/assets/images/Small.jpg"
      }
    },
    {
      "id": "ESHSUPERTR",
      "name": {
        "en": "ESH SUPER TR Thermostat RF",
        "no": "ESH Super TR Thermostat RF"
      },
      "class": "thermostat",
      "capabilities": [
        "target_temperature",
        "measure_temperature",
        "measure_temperature.air",
        "measure_temperature.floor",
        "measure_power",
        "meter_power",
        "childlock",
        "heat",
        "temp_mode",
        "thermostat_mode"
      ],
      "capabilitiesOptions": {
        "target_temperature": {
          "min": 0,
          "max": 100,
          "step": 0.5
        },
        "measure_temperature.air": {
          "title": {
            "en": "Air",
            "no": "Luft"
          }
        },
        "measure_temperature.floor": {
          "title": {
            "en": "Floor",
            "no": "Gulv"
          }
        }
      },
      "mobile": {
        "components": [
          {
            "id": "icon",
            "capabilities": [
            ]
          },
          {
            "id": "sensor",
            "capabilities": [
              "heat",
              "measure_temperature.air",
              "measure_temperature.floor",
              "childlock"
            ],
            "options": {
              "icons": {
                "heat": "/drivers/ESHSUPERTR/assets/heating.svg",
                "childlock": "/drivers/ESHSUPERTR/assets/child.svg"
              },
              "showTitle": true
            }
          },
          {
            "id": "thermostat",
            "capabilities": [
              "target_temperature"
            ]
          }
        ]
      },
      "zigbee": {
        "manufacturerName": "ELKO",
        "productId": [
          "Super TR"
        ],
        "deviceId": 769,
        "profileId": 260,
        "learnmode": {
          "image": "/drivers/ESHSUPERTR/assets/include.svg",
          "instruction": {
            "en": "Click on and hold arrow up and M Button (1) until joining/pairing is displayed. Wait for Homey to list device",
            "no": "Klikk og hold pil opp og M knappen (1.) inntil Joining/pairing vises i displayet. Vent på at Homey legger til enheten"
          }
        }
      },
      "images": {
        "large": "/drivers/ESHSUPERTR/assets/images/Large.jpg",
        "small": "/drivers/ESHSUPERTR/assets/images/Small.jpg"
      }
    }
  ],
  "capabilities": {
    "childlock": {
      "type": "boolean",
      "uiComponent": "sensor",
      "uiQuickAction": false,
      "title": {
        "en": "Child Lock",
        "no": "Barnesikkring"
      },
      "desc": {
        "en": "Child Lock",
        "no": "Barnesikkring"
      },
      "titleTrue": {
        "en": "Locked",
        "no": "Aktivert"
      },
      "titleFalse": {
        "en": "Unlocked",
        "no": "Deaktivert"
      },
      "getable": true,
      "setable": false,
      "insights": true,
      "insightsTitleTrue": {
        "en": "Locked",
        "no": "Aktivert"
      },
      "insightsTitleFalse": {
        "en": "Unlocked",
        "no": "Deaktivert"
      },
      "icon": "/drivers/ESHSUPERTR/assets/child.svg"
    },
    "heat": {
      "type": "boolean",
      "uiComponent": "sensor",
      "uiQuickAction": false,
      "title": {
        "en": "Heating",
        "no": "Varmer"
      },
      "desc": {
        "en": "Heating",
        "no": "Varmer"
      },
      "titleTrue": {
        "en": "Heating",
        "no": "Varmer"
      },
      "titleFalse": {
        "en": "Idle",
        "no": "Inaktiv"
      },
      "getable": true,
      "setable": false,
      "insights": true,
      "insightsTitleTrue": {
        "en": "Heating",
        "nl": "Varmer"
      },
      "insightsTitleFalse": {
        "en": "Idle",
        "nl": "Inaktiv"
      },
      "icon": "/drivers/ESHSUPERTR/assets/heating.svg"
    },
    "temp_mode": {
      "type": "number",
      "title": {
        "en": "Temperature mode",
        "no": "Temperatur modus"
      },
      "getable": true,
      "setable": false,
      "insights": false,
      "uiComponent": null
    },
    "thermostat_mode": {
      "type": "number",
      "title": {
        "en": "Thermostat mode",
        "no": "Termostat modus"
      },
      "getable": true,
      "setable": false,
      "insights": false,
      "uiComponent": null
  }
}
}
