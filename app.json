{
    "id": "com.elko",
    "version": "0.0.4",
    "compatibility": ">=1.5.3",
    "sdk": 2,
    "brandColor": "#be0000",
    "name": {
        "en": "ELKO Smart Home"
    },
    "description": {
        "en": "This app adds support for your ELKO Smart Home devices"
    },
    "category": [ "lights", "climate" ],
    "images": {
        "large": "/assets/images/Large.jpg",
        "small": "/assets/images/small.jpg",
    },
    "author": {
        "name": "Pål Raymond Johansen",
        "email": "prj_84@hotmail.com"
    },
	  "contributors": {
		  "developers": [
      {
        "name": "Pål Raymond Johansen",
        "email": "prj_84@hotmail.com"
      },
			{
        "name": "Martin Brasse",
			  "email": "kasteleman@gmail.com"
      },
      {
        "name": "Nils-Martn Skaanes",
        "email": "nilskaa@gmail.com"
      },
      {
        "name": "Ted Tolboom",
        "email": "dtnl.homey@gmail.com"
      }
      ]
	  },

	  "contributing": {
      "donate": {
        "paypal": {
          "username": "prj84"
        }
      }
    },

    "drivers": [
    {
      "id": "ESH316GLED",
      "name": {
        "en": "ESH 316GLED Dimmer RF PF"
      },
      "class": "light",
      "capabilities": [ "onoff", "dim" ],
      "capabilitiesOptions": {
        "dim": {
        "setOnDim": "false"
        }
      },
      "zigbee": {
        "manufacturerName": "ELKO",
        "productId": "ElkoDimmerZHA",
        "deviceId": 257,
        "profileId": 260,
			  "learnmode": {
          "image": "/drivers/ESH316GLED/assets/include.svg",
          "instruction": {
            "en": "Click on and hold dimmer wheel 1. and pushbutton 2. Until green LED 3. flashes. Wait for Homey to list device"
          }
        }
      },
      "images": {
        "large": "/drivers/ESH316GLED/assets/images/Large.jpg",
        "small": "/drivers/ESH316GLED/assets/images/Small.jpg"
      }
	  },
    {
      "id": "ESH316GLEDREMOTE",
        "name": {
          "en": "ESH 316GLED Dimmer REMOTE RF PF"
        },
        "class": "light",
        "capabilities": [ "onoff", "dim" ],
        "capabilitiesOptions": {
          "dim": {
            "setOnDim": "false"
          }
        },
        "zigbee": {
          "manufacturerName": "ELKO",
          "productId": "ElkoDimmerRemoteZHA",
          "deviceId": 260,
          "profileId": 260,
          "learnmode": {
            "image": "/drivers/ESH316GLEDREMOTE/assets/include.svg",
            "instruction": {
              "en": "Click on and hold pushbutton 2. Until green LED 3. flashes. Wait for Homey to list device"
            }
          }
        },
        "images": {
          "large": "/drivers/ESH316GLEDREMOTE/assets/images/Large.jpg",
          "small": "/drivers/ESH316GLEDREMOTE/assets/images/Small.jpg"
        }
    },
		{
      "id": "ESHSUPERTR",
      "name": {
        "en": "ESH SUPER TR Thermostat RF"
      },
      "class": "thermostat",
      "capabilities": [ "target_temperature",
                        "measure_temperature",
                        "measure_temperature.air",
                        "measure_temperature.floor",
                        "measure_power",
                        "meter_power",
                        "sensormode",
                        "onoff.childlock",
                        "onoff.heat" ],
      "capabilitiesOptions": {
        "target_temperature": {
          "min": 5,
          "max": 50,
          "step": 0.5,
        },
        "measure_temperature": {
          "title": "Thermostat Temperature"
        },
		    "measure_temperature.air": {
          "title": {
            "en": "Air"
          },
          "min": 0,
          "max": 30
		    },
		    "measure_temperature.floor": {
          "title":{
			       "en": "Floor"
			    }
		    },
        "sensormode":{
          "title":{
            "en": "Sensormode"
          },
          "type": "enum",
          "getable": false,
          "setable": false,
          "values": [
          {
            "id": "00",
            "title": {
              "en": "Air Sensor"
            }
          },
          {
            "id": "01",
            "title": {
              "en": "Floor Sensor"
            }
          },
          {
            "id": "03",
            "title": {
              "en": "Floor Sensor - Wood Floor"
            }
          }
          ]
        },
		    "childlock":{
		      "title": {
			      "en":"Child Lock"
          },
          "type": "boolean",
          "getable": true,
          "setable": false
        },
        "heat":{
          "title": {
            "en":"Heating"
          },
          "type": "boolean",
          "getable": true,
          "setable": false
        }
      },

      "mobile": {
        "components": [
        {
          "id": "icon",
          "capabilities": [
          ]
        },
        {
          "id": "sensor",
          "capabilities": [ "onoff.heat",
                            "measure_temperature",
                            "measure_temperature.air",
                            "measure_temperature.floor",
                            "onoff.childlock"
                          ],
          "options": {
            "icons":{
              "onoff.heat": "/drivers/ESHSUPERTR/assets/heating.svg",
              "onoff.childlock": "/drivers/ESHSUPERTR/assets/child.svg"
            },
            "showTitle": true
            }
        },
        {
        "id": "thermostat",
        "capabilities": [ "target_temperature" ]
        }
        ]
      },

		  "zigbee": {
        "manufacturerName": "ELKO",
        "productId": ["Super TR"],
        "deviceId": 769,
        "profileId": 260,
			  "learnmode": {
          "image": "/drivers/ESHSUPERTR/assets/include.svg",
          "instruction": {
            "en": "Click on and hold arrow up and M Button (1) until joining/pairing is displayed. Wait for Homey to list device"
          }
        }
      },
      "images": {
        "large": "/drivers/ESHSUPERTR/assets/images/Large.jpg",
        "small": "/drivers/ESHSUPERTR/assets/images/Small.jpg"
      }
	   }
	 ]
}
